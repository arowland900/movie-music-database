<%- include('../partials/header') %>
<h1 class="jumbotron text-center"><%= show.title %></h1>
<section id="show-page">
    <h1>Title: <strong><%= show.title %></strong></h1>

    <h1>Release Year: <strong><%= show.year %></strong></h1>

    <h1>Writer: <strong><%= show.writer %></strong></h1>
    
    <h1>Director: <strong><%= show.director %></strong></h1>

    <h1>Episodes:</h1>
    <ul>
        <%- show.episodes.map(e => 
        `
        <a href=/episodes/${e._id}><li><strong>S${e.season} E${e.epNum}</strong><i>${e.title}</i><small>${e.airDate}</small> </li></a>
        `
      ).join('') %>
    </ul>
</section>

</body>

</html>